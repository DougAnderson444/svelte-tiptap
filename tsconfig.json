{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "types": ["svelte"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitOverride": true
    // "exactOptionalPropertyTypes": true TODO: Enable after TS 4.4
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules/*", "dist/*"]
}
